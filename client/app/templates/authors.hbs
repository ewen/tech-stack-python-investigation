<h2>Authors</h2>

<ul>
{{#each model as |author|}}
  <li>{{author.name}}</li>
  <ul>
  {{#each author.books as |book|}}
    <li>{{book.title}} - {{book.displayPubDate}} ({{book.genre.name}})</li>
  {{/each}}
  </ul>
{{/each}}
</ul>

{{add-edit-author
  author=model.newAuthor
  saveAuthor=(route-action 'saveAuthor')
}}




